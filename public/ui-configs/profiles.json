{
  "displayName": "Profiles",
  "description": "User profiles for personalized viewing experience",
  "icon": "user-circle",
  "views": {
    "list": {
      "columns": [
        {
          "key": "displayName",
          "label": "Display Name",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "displayName",
          "subtitleField": "userId"
        },
        {
          "key": "userId",
          "label": "User",
          "type": "ref",
          "refTo": "users",
          "sortable": true,
          "filterable": true,
          "width": "15%"
        },
        {
          "key": "maturityRating",
          "label": "Maturity Rating",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "language",
          "label": "Language",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%"
        },
        {
          "key": "isActive",
          "label": "Active",
          "type": "boolean",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center"
        },
        {
          "key": "isPrimary",
          "label": "Primary",
          "type": "boolean",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "12%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": { "field": "createdAt", "direction": "desc" },
      "defaultFilters": [
        {
          "field": "maturityRating",
          "type": "select",
          "label": "Maturity Rating",
          "options": [
            { "value": "G", "label": "G - General Audiences" },
            { "value": "PG", "label": "PG - Parental Guidance" },
            { "value": "PG-13", "label": "PG-13 - Parents Strongly Cautioned" },
            { "value": "R", "label": "R - Restricted" },
            { "value": "NC-17", "label": "NC-17 - No One 17 and Under" },
            { "value": "TV-Y", "label": "TV-Y - All Children" },
            { "value": "TV-Y7", "label": "TV-Y7 - Directed to Older Children" },
            { "value": "TV-G", "label": "TV-G - General Audience" },
            { "value": "TV-PG", "label": "TV-PG - Parental Guidance" },
            { "value": "TV-14", "label": "TV-14 - Parents Strongly Cautioned" },
            { "value": "TV-MA", "label": "TV-MA - Mature Audience" }
          ]
        },
        {
          "field": "isActive",
          "type": "select",
          "label": "Active",
          "options": [
            { "value": "true", "label": "Active" },
            { "value": "false", "label": "Inactive" }
          ]
        }
      ],
      "searchableFields": ["displayName"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Profile",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "profiles:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "profiles:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "profiles:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "profiles:delete"
        }
      ]
    },
    "gallery": {
      "titleField": "displayName",
      "descriptionField": "userId",
      "imageField": "avatarUrl"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          { "key": "displayName", "label": "Display Name", "type": "text" },
          { "key": "userId", "label": "User", "type": "ref", "refTo": "users" },
          { "key": "avatarUrl", "label": "Avatar", "type": "image" },
          {
            "key": "maturityRating",
            "label": "Maturity Rating",
            "type": "text",
            "formatter": "badge"
          },
          { "key": "language", "label": "Language", "type": "text" },
          { "key": "timezone", "label": "Timezone", "type": "text" }
        ]
      },
      {
        "title": "Viewing Preferences",
        "fields": [
          {
            "key": "preferences.autoPlay",
            "label": "Auto Play",
            "type": "boolean"
          },
          {
            "key": "preferences.skipIntro",
            "label": "Skip Intro",
            "type": "boolean"
          },
          {
            "key": "preferences.skipCredits",
            "label": "Skip Credits",
            "type": "boolean"
          },
          {
            "key": "preferences.subtitles",
            "label": "Subtitles",
            "type": "boolean"
          },
          {
            "key": "preferences.audioDescription",
            "label": "Audio Description",
            "type": "boolean"
          },
          {
            "key": "preferences.quality",
            "label": "Video Quality",
            "type": "text"
          }
        ]
      },
      {
        "title": "Status",
        "fields": [
          { "key": "isActive", "label": "Active", "type": "boolean" },
          { "key": "isPrimary", "label": "Primary", "type": "boolean" },
          {
            "key": "createdAt",
            "label": "Created At",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "updatedAt",
            "label": "Updated At",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "userId",
        "label": "User",
        "type": "ref",
        "refTo": "users",
        "required": true,
        "placeholder": "Select user"
      },
      {
        "key": "displayName",
        "label": "Display Name",
        "type": "text",
        "required": true,
        "placeholder": "Enter display name"
      },
      {
        "key": "avatarUrl",
        "label": "Avatar URL",
        "type": "url",
        "placeholder": "Enter avatar URL"
      },
      {
        "key": "maturityRating",
        "label": "Maturity Rating",
        "type": "select",
        "options": [
          { "value": "G", "label": "G - General Audiences" },
          { "value": "PG", "label": "PG - Parental Guidance" },
          { "value": "PG-13", "label": "PG-13 - Parents Strongly Cautioned" },
          { "value": "R", "label": "R - Restricted" },
          { "value": "NC-17", "label": "NC-17 - No One 17 and Under" },
          { "value": "TV-Y", "label": "TV-Y - All Children" },
          { "value": "TV-Y7", "label": "TV-Y7 - Directed to Older Children" },
          { "value": "TV-G", "label": "TV-G - General Audience" },
          { "value": "TV-PG", "label": "TV-PG - Parental Guidance" },
          { "value": "TV-14", "label": "TV-14 - Parents Strongly Cautioned" },
          { "value": "TV-MA", "label": "TV-MA - Mature Audience" }
        ],
        "required": true
      },
      {
        "key": "language",
        "label": "Language",
        "type": "select",
        "options": [
          { "value": "en", "label": "English" },
          { "value": "es", "label": "Spanish" },
          { "value": "fr", "label": "French" },
          { "value": "de", "label": "German" },
          { "value": "ja", "label": "Japanese" },
          { "value": "ko", "label": "Korean" },
          { "value": "zh", "label": "Chinese" },
          { "value": "hi", "label": "Hindi" }
        ],
        "required": true
      },
      {
        "key": "timezone",
        "label": "Timezone",
        "type": "text",
        "placeholder": "e.g., America/New_York"
      },
      {
        "key": "isActive",
        "label": "Active",
        "type": "boolean"
      },
      {
        "key": "isPrimary",
        "label": "Primary Profile",
        "type": "boolean"
      }
    ],
    "sections": [
      {
        "title": "Viewing Preferences",
        "fields": [
          {
            "key": "preferences.autoPlay",
            "label": "Auto Play",
            "type": "boolean"
          },
          {
            "key": "preferences.skipIntro",
            "label": "Skip Intro",
            "type": "boolean"
          },
          {
            "key": "preferences.skipCredits",
            "label": "Skip Credits",
            "type": "boolean"
          },
          {
            "key": "preferences.subtitles",
            "label": "Subtitles",
            "type": "boolean"
          },
          {
            "key": "preferences.audioDescription",
            "label": "Audio Description",
            "type": "boolean"
          },
          {
            "key": "preferences.quality",
            "label": "Video Quality",
            "type": "select",
            "options": [
              { "value": "auto", "label": "Auto" },
              { "value": "480p", "label": "480p" },
              { "value": "720p", "label": "720p" },
              { "value": "1080p", "label": "1080p" },
              { "value": "4k", "label": "4K" }
            ]
          }
        ]
      }
    ]
  }
}
