{
  "displayName": "Media",
  "description": "Manage media files including videos, audio, subtitles and images",
  "icon": "video-camera",
  "views": {
    "list": {
      "columns": [
        {
          "key": "fileName",
          "label": "File",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "25%",
          "titleField": "fileName",
          "subtitleField": "type"
        },
        {
          "key": "type",
          "label": "Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "12%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "format",
          "label": "Format",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "language",
          "label": "Language",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center"
        },
        {
          "key": "fileSize",
          "label": "Size",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "align": "right",
          "formatter": "number"
        },
        {
          "key": "duration",
          "label": "Duration",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "align": "right",
          "formatter": "number"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "12%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "createdAt",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "type",
          "type": "select",
          "label": "Type",
          "options": [
            { "value": "dubbed", "label": "Dubbed" },
            { "value": "trailer", "label": "Trailer" },
            { "value": "voice_over", "label": "Voice Over" },
            { "value": "subtitle", "label": "Subtitle" },
            { "value": "original", "label": "Original" },
            { "value": "behind_scenes", "label": "Behind Scenes" },
            { "value": "interview", "label": "Interview" },
            { "value": "promo", "label": "Promo" },
            { "value": "recording", "label": "Recording" },
            { "value": "mixing", "label": "Mixing" },
            { "value": "master", "label": "Master" },
            { "value": "poster", "label": "Poster" }
          ]
        },
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "pending", "label": "Pending" },
            { "value": "processing", "label": "Processing" },
            { "value": "completed", "label": "Completed" },
            { "value": "failed", "label": "Failed" }
          ]
        }
      ],
      "searchableFields": ["fileName", "description", "tags"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Upload Media",
          "type": "button",
          "icon": "upload",
          "variant": "primary",
          "permission": "media:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "media:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "media:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "media:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "pending", "label": "Pending", "color": "#64748b" },
        { "value": "processing", "label": "Processing", "color": "#fbbf24" },
        { "value": "completed", "label": "Completed", "color": "#22c55e" },
        { "value": "failed", "label": "Failed", "color": "#ef4444" }
      ],
      "cardTitleField": "fileName",
      "cardDescriptionField": "type"
    },
    "gallery": {
      "titleField": "fileName",
      "descriptionField": "type",
      "imageField": "thumbnailUrl"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "fileName",
      "colorField": "type",
      "descriptionField": "format"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "File Information",
        "fields": [
          { "key": "fileName", "label": "File Name", "type": "text" },
          {
            "key": "type",
            "label": "Type",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "format",
            "label": "Format",
            "type": "text",
            "formatter": "badge"
          },
          { "key": "contentType", "label": "Content Type", "type": "text" }
        ]
      },
      {
        "title": "Media Details",
        "fields": [
          { "key": "language", "label": "Language", "type": "text" },
          {
            "key": "duration",
            "label": "Duration (seconds)",
            "type": "number"
          },
          {
            "key": "fileSize",
            "label": "File Size (bytes)",
            "type": "number",
            "formatter": "number"
          }
        ]
      },
      {
        "title": "Storage & URLs",
        "fields": [
          { "key": "fileUrl", "label": "File URL", "type": "url" },
          { "key": "thumbnailUrl", "label": "Thumbnail URL", "type": "url" },
          { "key": "previewUrl", "label": "Preview URL", "type": "url" },
          { "key": "bucket", "label": "Storage Bucket", "type": "text" },
          { "key": "path", "label": "Storage Path", "type": "text" }
        ]
      },
      {
        "title": "Relationships",
        "fields": [
          {
            "key": "relationships",
            "label": "Related Entities",
            "type": "array"
          }
        ]
      },
      {
        "title": "Metadata",
        "fields": [
          { "key": "description", "label": "Description", "type": "text" },
          {
            "key": "tags",
            "label": "Tags",
            "type": "array",
            "formatter": "badge"
          }
        ]
      },
      {
        "title": "Status & Processing",
        "fields": [
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          { "key": "uploadUrl", "label": "Upload URL", "type": "url" },
          {
            "key": "uploadExpiresAt",
            "label": "Upload Expires",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "createdAt",
            "label": "Created",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "updatedAt",
            "label": "Updated",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "mode": "upload",
    "fields": [
      {
        "key": "type",
        "label": "Media Type",
        "type": "select",
        "required": true,
        "options": [
          { "value": "dubbed", "label": "Dubbed" },
          { "value": "trailer", "label": "Trailer" },
          { "value": "voice_over", "label": "Voice Over" },
          { "value": "subtitle", "label": "Subtitle" },
          { "value": "original", "label": "Original" },
          { "value": "behind_scenes", "label": "Behind Scenes" },
          { "value": "interview", "label": "Interview" },
          { "value": "promo", "label": "Promo" },
          { "value": "recording", "label": "Recording" },
          { "value": "mixing", "label": "Mixing" },
          { "value": "master", "label": "Master" },
          { "value": "poster", "label": "Poster" }
        ]
      },
      {
        "key": "language",
        "label": "Language",
        "type": "select",
        "options": [
          { "value": "en", "label": "English" },
          { "value": "es", "label": "Spanish" },
          { "value": "fr", "label": "French" },
          { "value": "de", "label": "German" },
          { "value": "ja", "label": "Japanese" },
          { "value": "ko", "label": "Korean" },
          { "value": "zh", "label": "Chinese" },
          { "value": "hi", "label": "Hindi" }
        ]
      },
      {
        "key": "description",
        "label": "Description",
        "type": "textarea",
        "placeholder": "Enter media description"
      },
      {
        "key": "tags",
        "label": "Tags",
        "type": "multiselect",
        "options": []
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "pending", "label": "Pending" },
          { "value": "processing", "label": "Processing" },
          { "value": "completed", "label": "Completed" },
          { "value": "failed", "label": "Failed" }
        ]
      }
    ]
  }
}
