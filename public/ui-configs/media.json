{
  "displayName": "Media",
  "description": "Manage media files and assets",
  "icon": "image",
  "views": {
    "list": {
      "columns": [
        {
          "key": "fileName",
          "label": "File Name",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "fileName",
          "subtitleField": "type"
        },
        {
          "key": "type",
          "label": "Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "formatter": "badge"
        },
        {
          "key": "format",
          "label": "Format",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "formatter": "badge"
        },
        {
          "key": "fileSize",
          "label": "Size",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "formatter": "number"
        },
        {
          "key": "duration",
          "label": "Duration",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "formatter": "number"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "formatter": "status"
        },
        {
          "key": "language",
          "label": "Language",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "formatter": "badge"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "createdAt",
        "direction": "desc"
      },
      "searchableFields": ["fileName", "description", "tags"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Media",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "media:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "media:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "media:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "media:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        {
          "value": "pending",
          "label": "Pending",
          "color": "#fbbf24"
        },
        {
          "value": "processing",
          "label": "Processing",
          "color": "#3b82f6"
        },
        {
          "value": "completed",
          "label": "Completed",
          "color": "#22c55e"
        },
        {
          "value": "failed",
          "label": "Failed",
          "color": "#ef4444"
        },
        {
          "value": "reviewed",
          "label": "Reviewed",
          "color": "#8b5cf6"
        },
        {
          "value": "approved",
          "label": "Approved",
          "color": "#10b981"
        }
      ],
      "cardTitleField": "fileName",
      "cardDescriptionField": "type"
    },
    "gallery": {
      "titleField": "fileName",
      "descriptionField": "type",
      "imageField": "thumbnailUrl"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "fileName",
      "colorField": "status",
      "descriptionField": "type"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          {
