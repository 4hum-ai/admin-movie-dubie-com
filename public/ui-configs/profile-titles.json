{
  "displayName": "Profile Titles",
  "description": "User profile lists for titles (favorites, watching, watched, watch later)",
  "icon": "list",
  "views": {
    "list": {
      "columns": [
        {
          "key": "profileId",
          "label": "Profile",
          "type": "ref",
          "refTo": "profiles",
          "sortable": true,
          "filterable": true,
          "width": "20%",
          "titleField": "profileId"
        },
        {
          "key": "titleId",
          "label": "Title",
          "type": "ref",
          "refTo": "titles",
          "sortable": true,
          "filterable": true,
          "width": "25%",
          "titleField": "titleId"
        },
        {
          "key": "listType",
          "label": "List Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "addedAt",
          "label": "Added",
          "type": "date",
          "sortable": true,
          "width": "15%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "lastWatchedAt",
          "label": "Last Watched",
          "type": "date",
          "sortable": true,
          "width": "15%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": { "field": "addedAt", "direction": "desc" },
      "defaultFilters": [
        {
          "field": "profileId",
          "type": "ref",
          "refTo": "profiles",
          "label": "Profile"
        },
        {
          "field": "titleId",
          "type": "ref",
          "refTo": "titles",
          "label": "Title"
        },
        {
          "field": "listType",
          "type": "select",
          "label": "List Type",
          "options": [
            { "value": "favorite", "label": "Favorite" },
            { "value": "watching", "label": "Watching" },
            { "value": "watched", "label": "Watched" },
            { "value": "watch_later", "label": "Watch Later" }
          ]
        }
      ],
      "searchableFields": [],
      "pageSize": 50,
      "actions": [
        {
          "name": "create",
          "label": "Add to List",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "profile-titles:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "profile-titles:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "profile-titles:update"
        },
        {
          "name": "delete",
          "label": "Remove",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "profile-titles:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "listType",
      "columns": [
        { "value": "favorite", "label": "Favorites", "color": "#ef4444" },
        { "value": "watching", "label": "Watching", "color": "#3b82f6" },
        { "value": "watched", "label": "Watched", "color": "#22c55e" },
        { "value": "watch_later", "label": "Watch Later", "color": "#f59e0b" }
      ],
      "cardTitleField": "titleId",
      "cardDescriptionField": "profileId"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "List Entry",
        "fields": [
          {
            "key": "profileId",
            "label": "Profile",
            "type": "ref",
            "refTo": "profiles"
          },
          {
            "key": "titleId",
            "label": "Title",
            "type": "ref",
            "refTo": "titles"
          },
          {
            "key": "listType",
            "label": "List Type",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "addedAt",
            "label": "Added At",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "lastWatchedAt",
            "label": "Last Watched At",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "createdAt",
            "label": "Created At",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "profileId",
        "label": "Profile",
        "type": "ref",
        "refTo": "profiles",
        "required": true,
        "placeholder": "Select profile"
      },
      {
        "key": "titleId",
        "label": "Title",
        "type": "ref",
        "refTo": "titles",
        "required": true,
        "placeholder": "Select title"
      },
      {
        "key": "listType",
        "label": "List Type",
        "type": "select",
        "options": [
          { "value": "favorite", "label": "Favorite" },
          { "value": "watching", "label": "Watching" },
          { "value": "watched", "label": "Watched" },
          { "value": "watch_later", "label": "Watch Later" }
        ],
        "required": true
      },
      {
        "key": "lastWatchedAt",
        "label": "Last Watched At",
        "type": "datetime",
        "placeholder": "Select date and time"
      }
    ]
  }
}
