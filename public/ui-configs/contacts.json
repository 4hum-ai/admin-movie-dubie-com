{
  "displayName": "Contacts",
  "description": "Manage contact information",
  "icon": "address-book",
  "views": {
    "list": {
      "columns": [
        {
          "key": "name",
          "label": "Name",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "name",
          "subtitleField": "role"
        },
        {
          "key": "email",
          "label": "Email",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "25%"
        },
        {
          "key": "role",
          "label": "Role",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "12%",
          "formatter": "badge"
        },
        {
          "key": "department",
          "label": "Department",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "12%",
          "formatter": "badge"
        },
        {
          "key": "phone",
          "label": "Phone",
          "type": "text",
          "sortable": true,
          "width": "12%"
        },
        {
          "key": "country",
          "label": "Country",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "formatter": "country"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "9%",
          "align": "center",
          "formatter": "status"
        }
      ],
      "defaultSort": {
        "field": "name",
        "direction": "asc"
      },
      "defaultFilters": [
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            {
              "value": "active",
              "label": "Active"
            },
            {
              "value": "inactive",
              "label": "Inactive"
            },
            {
              "value": "archived",
              "label": "Archived"
            }
          ]
        },
        {
          "field": "preferredContactMethod",
          "type": "select",
          "label": "Contact Method",
          "options": [
            {
              "value": "email",
              "label": "Email"
            },
            {
              "value": "phone",
              "label": "Phone"
            },
            {
              "value": "sms",
              "label": "SMS"
            }
          ]
        }
      ],
      "searchableFields": ["name", "email", "role", "department"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Contact",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "contacts:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "contacts:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "contacts:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "contacts:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        {
          "value": "active",
          "label": "Active",
          "color": "#22c55e"
        },
        {
          "value": "inactive",
          "label": "Inactive",
          "color": "#64748b"
        },
        {
          "value": "archived",
          "label": "Archived",
          "color": "#fbbf24"
        }
      ],
      "cardTitleField": "name",
      "cardDescriptionField": "email"
    },
    "gallery": {
      "titleField": "name",
      "descriptionField": "role",
      "imageField": "avatar"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "name",
      "colorField": "status",
      "descriptionField": "email"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          {
            "key": "name",
            "label": "Name",
