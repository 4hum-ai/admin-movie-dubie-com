{
  "displayName": "Contacts",
  "description": "Manage individual contacts and their information",
  "icon": "user",
  "views": {
    "list": {
      "columns": [
        {
          "key": "name",
          "label": "Contact",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "name",
          "subtitleField": "email"
        },
        {
          "key": "email",
          "label": "Email",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%"
        },
        {
          "key": "role",
          "label": "Role",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%"
        },
        {
          "key": "department",
          "label": "Department",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%"
        },
        {
          "key": "country",
          "label": "Country",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "formatter": "country"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "createdAt",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "active", "label": "Active" },
            { "value": "inactive", "label": "Inactive" },
            { "value": "archived", "label": "Archived" }
          ]
        },
        {
          "field": "country",
          "type": "select",
          "label": "Country",
          "options": []
        }
      ],
      "searchableFields": ["name", "email", "role", "department"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Contact",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "contacts:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "contacts:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "contacts:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "contacts:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "active", "label": "Active", "color": "#22c55e" },
        { "value": "inactive", "label": "Inactive", "color": "#64748b" },
        { "value": "archived", "label": "Archived", "color": "#ef4444" }
      ],
      "cardTitleField": "name",
      "cardDescriptionField": "email"
    },
    "gallery": {
      "titleField": "name",
      "descriptionField": "email",
      "imageField": "avatar"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "name",
      "colorField": "status",
      "descriptionField": "email"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          { "key": "name", "label": "Name", "type": "text" },
          { "key": "email", "label": "Email", "type": "text" },
          { "key": "phone", "label": "Phone", "type": "text" },
          { "key": "role", "label": "Role", "type": "text" },
          { "key": "department", "label": "Department", "type": "text" }
        ]
      },
      {
        "title": "Location",
        "fields": [
          {
            "key": "country",
            "label": "Country",
            "type": "text",
            "formatter": "country"
          },
          { "key": "state", "label": "State", "type": "text" },
          { "key": "city", "label": "City", "type": "text" },
          { "key": "address", "label": "Address", "type": "text" },
          { "key": "postalCode", "label": "Postal Code", "type": "text" }
        ]
      },
      {
        "title": "Preferences",
        "fields": [
          {
            "key": "preferredContactMethod",
            "label": "Preferred Contact Method",
            "type": "text",
            "formatter": "badge"
          },
          { "key": "timezone", "label": "Timezone", "type": "text" },
          { "key": "language", "label": "Language", "type": "text" }
        ]
      },
      {
        "title": "Status & Notes",
        "fields": [
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          { "key": "notes", "label": "Notes", "type": "text" },
          {
            "key": "createdAt",
            "label": "Created",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "updatedAt",
            "label": "Updated",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "name",
        "label": "Name",
        "type": "text",
        "required": true,
        "placeholder": "Enter full name"
      },
      {
        "key": "email",
        "label": "Email",
        "type": "email",
        "required": true,
        "placeholder": "Enter email address"
      },
      {
        "key": "phone",
        "label": "Phone",
        "type": "text",
        "placeholder": "Enter phone number"
      },
      {
        "key": "role",
        "label": "Role",
        "type": "text",
        "placeholder": "Enter role or position"
      },
      {
        "key": "department",
        "label": "Department",
        "type": "text",
        "placeholder": "Enter department"
      },
      {
        "key": "address",
        "label": "Address",
        "type": "textarea",
        "placeholder": "Enter address"
      },
      {
        "key": "city",
        "label": "City",
        "type": "text",
        "placeholder": "Enter city"
      },
      {
        "key": "state",
        "label": "State",
        "type": "text",
        "placeholder": "Enter state"
      },
      {
        "key": "country",
        "label": "Country",
        "type": "select",
        "options": [],
        "placeholder": "Select country"
      },
      {
        "key": "postalCode",
        "label": "Postal Code",
        "type": "text",
        "placeholder": "Enter postal code"
      },
      {
        "key": "preferredContactMethod",
        "label": "Preferred Contact Method",
        "type": "select",
        "options": [
          { "value": "email", "label": "Email" },
          { "value": "phone", "label": "Phone" },
          { "value": "sms", "label": "SMS" }
        ]
      },
      {
        "key": "timezone",
        "label": "Timezone",
        "type": "text",
        "placeholder": "Enter timezone"
      },
      {
        "key": "language",
        "label": "Language",
        "type": "select",
        "options": [
          { "value": "en", "label": "English" },
          { "value": "es", "label": "Spanish" },
          { "value": "fr", "label": "French" },
          { "value": "de", "label": "German" },
          { "value": "ja", "label": "Japanese" },
          { "value": "ko", "label": "Korean" },
          { "value": "zh", "label": "Chinese" },
          { "value": "hi", "label": "Hindi" }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "active", "label": "Active" },
          { "value": "inactive", "label": "Inactive" },
          { "value": "archived", "label": "Archived" }
        ]
      },
      {
        "key": "notes",
        "label": "Notes",
        "type": "textarea",
        "placeholder": "Enter any additional notes"
      }
    ]
  }
}
