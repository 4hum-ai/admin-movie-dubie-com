          },
          {
            "key": "state",
            "label": "State",
            "type": "text"
          },
          {
            "key": "country",
            "label": "Country",
            "type": "text",
            "formatter": "country"
          },
          {
            "key": "postalCode",
            "label": "Postal Code",
            "type": "text"
          }
        ]
      },
      {
        "title": "Preferences",
        "fields": [
          {
            "key": "preferredContactMethod",
            "label": "Preferred Contact Method",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "timezone",
            "label": "Timezone",
            "type": "text"
          },
          {
            "key": "language",
            "label": "Language",
            "type": "text"
          }
        ]
      },
      {
        "title": "Status",
        "fields": [
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          {
            "key": "notes",
            "label": "Notes",
            "type": "text"
          }
        ]
      },
      {
        "title": "Timeline",
        "fields": [
          {
            "key": "createdAt",
            "label": "Created At",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "updatedAt",
            "label": "Updated At",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
