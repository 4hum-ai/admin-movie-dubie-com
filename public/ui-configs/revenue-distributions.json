{
  "displayName": "Revenue Distributions",
  "description": "Manage revenue distribution to publishers and content creators",
  "icon": "share",
  "views": {
    "list": {
      "columns": [
        {
          "key": "publisherId",
          "label": "Publisher ID",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%"
        },
        {
          "key": "publisherName",
          "label": "Publisher",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%"
        },
        {
          "key": "contentViews",
          "label": "Content Views",
          "type": "number",
          "sortable": true,
          "width": "12%",
          "align": "right",
          "formatter": "number"
        },
        {
          "key": "totalViews",
          "label": "Total Views",
          "type": "number",
          "sortable": true,
          "width": "12%",
          "align": "right",
          "formatter": "number"
        },
        {
          "key": "revenueShare",
          "label": "Revenue Share",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "align": "right",
          "formatter": "number"
        },
        {
          "key": "distributedAmount",
          "label": "Distributed Amount",
          "type": "number",
          "sortable": true,
          "width": "15%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "date",
          "label": "Date",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "date",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "pending", "label": "Pending" },
            { "value": "processed", "label": "Processed" },
            { "value": "paid", "label": "Paid" }
          ]
        }
      ],
      "searchableFields": ["publisherName", "publisherId"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Distribution",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "revenue-distributions:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "revenue-distributions:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "revenue-distributions:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "revenue-distributions:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "pending", "label": "Pending", "color": "#fbbf24" },
        { "value": "processed", "label": "Processed", "color": "#3b82f6" },
        { "value": "paid", "label": "Paid", "color": "#22c55e" }
      ],
      "cardTitleField": "publisherName",
      "cardDescriptionField": "distributedAmount"
    },
    "gallery": {
      "titleField": "publisherName",
      "descriptionField": "distributedAmount",
      "imageField": "publisherLogo"
    },
    "calendar": {
      "dateField": "date",
      "titleField": "publisherName",
      "colorField": "status",
      "descriptionField": "distributedAmount"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Publisher Information",
        "fields": [
          { "key": "publisherId", "label": "Publisher ID", "type": "text" },
          { "key": "publisherName", "label": "Publisher Name", "type": "text" }
        ]
      },
      {
        "title": "View Metrics",
        "fields": [
          { "key": "contentViews", "label": "Content Views", "type": "number" },
          { "key": "totalViews", "label": "Total Views", "type": "number" }
        ]
      },
      {
        "title": "Revenue Distribution",
        "fields": [
          {
            "key": "revenueShare",
            "label": "Revenue Share (%)",
            "type": "number"
          },
          {
            "key": "distributedAmount",
            "label": "Distributed Amount",
            "type": "number",
            "formatter": "currency"
          }
        ]
      },
      {
        "title": "Status & Date",
        "fields": [
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          {
            "key": "date",
            "label": "Distribution Date",
            "type": "date",
            "formatter": "date"
          }
        ]
      },
      {
        "title": "Content Titles",
        "fields": [
          {
            "key": "contentTitles",
            "label": "Content Titles",
            "type": "array",
            "formatter": "badge"
          }
        ]
      },
      {
        "title": "Timestamps",
        "fields": [
          {
            "key": "createdAt",
            "label": "Created",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "publisherId",
        "label": "Publisher ID",
        "type": "text",
        "required": true,
        "placeholder": "Enter publisher ID"
      },
      {
        "key": "publisherName",
        "label": "Publisher Name",
        "type": "text",
        "required": true,
        "placeholder": "Enter publisher name"
      },
      {
        "key": "contentViews",
        "label": "Content Views",
        "type": "number",
        "placeholder": "Enter content views count"
      },
      {
        "key": "totalViews",
        "label": "Total Views",
        "type": "number",
        "placeholder": "Enter total views count"
      },
      {
        "key": "revenueShare",
        "label": "Revenue Share (%)",
        "type": "number",
        "placeholder": "Enter revenue share percentage"
      },
      {
        "key": "distributedAmount",
        "label": "Distributed Amount",
        "type": "number",
        "required": true,
        "placeholder": "Enter distributed amount"
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "pending", "label": "Pending" },
          { "value": "processed", "label": "Processed" },
          { "value": "paid", "label": "Paid" }
        ]
      },
      {
        "key": "date",
        "label": "Distribution Date",
        "type": "date",
        "required": true,
        "placeholder": "Select distribution date"
      },
      {
        "key": "contentTitles",
        "label": "Content Titles",
        "type": "multiselect",
        "options": []
      }
    ]
  }
}
