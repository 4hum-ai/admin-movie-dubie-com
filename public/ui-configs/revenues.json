{
  "displayName": "Revenues",
  "description": "Track revenue streams from content monetization",
  "icon": "chart-bar",
  "views": {
    "list": {
      "columns": [
        {
          "key": "titleId",
          "label": "Title",
          "type": "ref",
          "refTo": "titles",
          "sortable": true,
          "filterable": true,
          "width": "18%"
        },
        {
          "key": "organizationId",
          "label": "Organization",
          "type": "ref",
          "refTo": "organizations",
          "sortable": true,
          "filterable": true,
          "width": "15%"
        },
        {
          "key": "publisherName",
          "label": "Publisher",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "12%"
        },
        {
          "key": "type",
          "label": "Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "amount",
          "label": "Amount",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "netAmount",
          "label": "Net Amount",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "date",
          "label": "Date",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "9%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "date",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "type",
          "type": "select",
          "label": "Revenue Type",
          "options": [
            { "value": "AVOD", "label": "AVOD" },
            { "value": "SVOD", "label": "SVOD" },
            { "value": "TVOD", "label": "TVOD" },
            { "value": "licensing", "label": "Licensing" }
          ]
        },
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "pending", "label": "Pending" },
            { "value": "processed", "label": "Processed" },
            { "value": "paid", "label": "Paid" },
            { "value": "failed", "label": "Failed" }
          ]
        }
      ],
      "searchableFields": ["publisherName", "movieTitle", "description"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Revenue",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "revenues:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "revenues:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "revenues:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "revenues:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "pending", "label": "Pending", "color": "#fbbf24" },
        { "value": "processed", "label": "Processed", "color": "#3b82f6" },
        { "value": "paid", "label": "Paid", "color": "#22c55e" },
        { "value": "failed", "label": "Failed", "color": "#ef4444" }
      ],
      "cardTitleField": "publisherName",
      "cardDescriptionField": "amount"
    },
    "gallery": {
      "titleField": "publisherName",
      "descriptionField": "type",
      "imageField": "titlePoster"
    },
    "calendar": {
      "dateField": "date",
      "titleField": "publisherName",
      "colorField": "type",
      "descriptionField": "amount"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Revenue Information",
        "fields": [
          {
            "key": "titleId",
            "label": "Title",
            "type": "ref",
            "refTo": "titles"
          },
          {
            "key": "organizationId",
            "label": "Organization",
            "type": "ref",
            "refTo": "organizations"
          },
          { "key": "publisherName", "label": "Publisher Name", "type": "text" },
          { "key": "movieTitle", "label": "Movie Title", "type": "text" }
        ]
      },
      {
        "title": "Financial Details",
        "fields": [
          {
            "key": "amount",
            "label": "Amount",
            "type": "number",
            "formatter": "currency"
          },
          { "key": "currency", "label": "Currency", "type": "text" },
          { "key": "revenueShare", "label": "Revenue Share", "type": "number" },
          {
            "key": "processingFee",
            "label": "Processing Fee",
            "type": "number",
            "formatter": "currency"
          },
          {
            "key": "netAmount",
            "label": "Net Amount",
            "type": "number",
            "formatter": "currency"
          }
        ]
      },
      {
        "title": "Revenue Type & Status",
        "fields": [
          {
            "key": "type",
            "label": "Revenue Type",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          {
            "key": "date",
            "label": "Revenue Date",
            "type": "date",
            "formatter": "date"
          }
        ]
      },
      {
        "title": "Content & Platform",
        "fields": [
          { "key": "platform", "label": "Platform", "type": "text" },
          { "key": "region", "label": "Region", "type": "text" },
          { "key": "language", "label": "Language", "type": "text" },
          { "key": "description", "label": "Description", "type": "text" }
        ]
      },
      {
        "title": "Advertising Metrics",
        "fields": [
          {
            "key": "adImpressions",
            "label": "Ad Impressions",
            "type": "number"
          },
          { "key": "adClicks", "label": "Ad Clicks", "type": "number" },
          {
            "key": "cpm",
            "label": "CPM",
            "type": "number",
            "formatter": "currency"
          },
          {
            "key": "adFormats",
            "label": "Ad Formats",
            "type": "array",
            "formatter": "badge"
          }
        ]
      },
      {
        "title": "Subscription Metrics",
        "fields": [
          {
            "key": "subscriptionRevenue",
            "label": "Subscription Revenue",
            "type": "number",
            "formatter": "currency"
          },
          {
            "key": "subscriberCount",
            "label": "Subscriber Count",
            "type": "number"
          },
          {
            "key": "monthlyPrice",
            "label": "Monthly Price",
            "type": "number",
            "formatter": "currency"
          }
        ]
      },
      {
        "title": "Timestamps",
        "fields": [
          {
            "key": "createdAt",
            "label": "Created",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "titleId",
        "label": "Title",
        "type": "resource",
        "resourceType": "titles",
        "displayField": "name",
        "valueField": "id",
        "subtitleField": "type",
        "searchable": true,
        "searchPlaceholder": "Search titles..."
      },
      {
        "key": "organizationId",
        "label": "Organization",
        "type": "resource",
        "resourceType": "organizations",
        "displayField": "name",
        "valueField": "id",
        "subtitleField": "type",
        "searchable": true,
        "searchPlaceholder": "Search organizations..."
      },
      {
        "key": "publisherName",
        "label": "Publisher Name",
        "type": "text",
        "placeholder": "Enter publisher name"
      },
      {
        "key": "movieTitle",
        "label": "Movie Title",
        "type": "text",
        "placeholder": "Enter movie title"
      },
      {
        "key": "amount",
        "label": "Amount",
        "type": "number",
        "required": true,
        "placeholder": "Enter revenue amount"
      },
      {
        "key": "currency",
        "label": "Currency",
        "type": "select",
        "options": [
          { "value": "USD", "label": "USD" },
          { "value": "EUR", "label": "EUR" },
          { "value": "JPY", "label": "JPY" },
          { "value": "KRW", "label": "KRW" },
          { "value": "CNY", "label": "CNY" },
          { "value": "INR", "label": "INR" }
        ]
      },
      {
        "key": "type",
        "label": "Revenue Type",
        "type": "select",
        "required": true,
        "options": [
          { "value": "AVOD", "label": "AVOD" },
          { "value": "SVOD", "label": "SVOD" },
          { "value": "TVOD", "label": "TVOD" },
          { "value": "licensing", "label": "Licensing" }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "pending", "label": "Pending" },
          { "value": "processed", "label": "Processed" },
          { "value": "paid", "label": "Paid" },
          { "value": "failed", "label": "Failed" }
        ]
      },
      {
        "key": "date",
        "label": "Revenue Date",
        "type": "date",
        "required": true,
        "placeholder": "Select revenue date"
      },
      {
        "key": "platform",
        "label": "Platform",
        "type": "text",
        "placeholder": "Enter platform name"
      },
      {
        "key": "region",
        "label": "Region",
        "type": "text",
        "placeholder": "Enter region"
      },
      {
        "key": "language",
        "label": "Language",
        "type": "text",
        "placeholder": "Enter language"
      },
      {
        "key": "revenueShare",
        "label": "Revenue Share",
        "type": "number",
        "placeholder": "Enter revenue share percentage"
      },
      {
        "key": "processingFee",
        "label": "Processing Fee",
        "type": "number",
        "placeholder": "Enter processing fee"
      },
      {
        "key": "netAmount",
        "label": "Net Amount",
        "type": "number",
        "placeholder": "Enter net amount"
      },
      {
        "key": "description",
        "label": "Description",
        "type": "textarea",
        "placeholder": "Enter revenue description"
      }
    ]
  }
}
