        "type": "number",
        "placeholder": "Enter release year"
      },
      {
        "key": "director",
        "label": "Director",
        "type": "text",
        "placeholder": "Enter director name"
      },
      {
        "key": "duration",
        "label": "Duration (seconds)",
        "type": "number",
        "placeholder": "Enter duration in seconds"
      },
      {
        "key": "genre",
        "label": "Genres",
        "type": "multiselect",
        "placeholder": "Select genres"
      },
      {
        "key": "language",
        "label": "Language",
        "type": "select",
        "options": [
          {
            "value": "en",
            "label": "English"
          },
          {
            "value": "es",
            "label": "Spanish"
          },
          {
            "value": "fr",
            "label": "French"
          },
          {
            "value": "de",
            "label": "German"
          },
          {
            "value": "ja",
            "label": "Japanese"
          },
