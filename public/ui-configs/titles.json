{
  "displayName": "Titles",
  "description": "Manage movies, series, episodes and documentaries",
  "icon": "film",
  "views": {
    "list": {
      "columns": [
        {
          "key": "name",
          "label": "Title",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "name",
          "subtitleField": "director"
        },
        {
          "key": "type",
          "label": "Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "year",
          "label": "Year",
          "type": "number",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center"
        },
        {
          "key": "director",
          "label": "Director",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "12%"
        },
        {
          "key": "organizationId",
          "label": "Organization",
          "type": "ref",
          "refTo": "organizations",
          "sortable": true,
          "filterable": true,
          "width": "12%"
        },
        {
          "key": "genre",
          "label": "Genre",
          "type": "array",
          "sortable": false,
          "filterable": true,
          "width": "15%",
          "formatter": "badge"
        },
        {
          "key": "rating",
          "label": "Rating",
          "type": "number",
          "sortable": true,
          "width": "8%",
          "align": "center",
          "formatter": "rating"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "createdAt",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "type",
          "type": "select",
          "label": "Type",
          "options": [
            { "value": "movie", "label": "Movie" },
            { "value": "series", "label": "Series" },
            { "value": "episode", "label": "Episode" },
            { "value": "documentary", "label": "Documentary" }
          ]
        },
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "draft", "label": "Draft" },
            { "value": "processing", "label": "Processing" },
            { "value": "published", "label": "Published" },
            { "value": "archived", "label": "Archived" }
          ]
        }
      ],
      "searchableFields": ["name", "director", "description"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Title",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "titles:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "titles:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "titles:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "titles:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "draft", "label": "Draft", "color": "#64748b" },
        { "value": "processing", "label": "Processing", "color": "#fbbf24" },
        { "value": "published", "label": "Published", "color": "#22c55e" },
        { "value": "archived", "label": "Archived", "color": "#ef4444" }
      ],
      "cardTitleField": "name",
      "cardDescriptionField": "director"
    },
    "gallery": {
      "titleField": "name",
      "descriptionField": "director",
      "imageField": "poster"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "name",
      "colorField": "type",
      "descriptionField": "director"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          { "key": "name", "label": "Title", "type": "text" },
          {
            "key": "type",
            "label": "Type",
            "type": "text",
            "formatter": "badge"
          },
          { "key": "year", "label": "Year", "type": "number" },
          { "key": "director", "label": "Director", "type": "text" },
          {
            "key": "genre",
            "label": "Genre",
            "type": "array",
            "formatter": "badge"
          }
        ]
      },
      {
        "title": "Details",
        "fields": [
          {
            "key": "rating",
            "label": "Rating",
            "type": "number",
            "formatter": "rating"
          },
          { "key": "duration", "label": "Duration", "type": "number" },
          { "key": "language", "label": "Language", "type": "text" },
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          }
        ]
      },
      {
        "title": "Relationships",
        "fields": [
          {
            "key": "organizationId",
            "label": "Organization",
            "type": "ref",
            "refTo": "organizations"
          },
          {
            "key": "parentTitleId",
            "label": "Parent Title",
            "type": "ref",
            "refTo": "titles"
          }
        ]
      },
      {
        "title": "Media",
        "fields": [
          { "key": "poster", "label": "Poster", "type": "image" },
          { "key": "thumbnail", "label": "Thumbnail", "type": "image" }
        ]
      },
      {
        "title": "Description",
        "fields": [
          { "key": "description", "label": "Description", "type": "text" },
          {
            "key": "tags",
            "label": "Tags",
            "type": "array",
            "formatter": "badge"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "name",
        "label": "Title",
        "type": "text",
        "required": true,
        "placeholder": "Enter title name"
      },
      {
        "key": "type",
        "label": "Type",
        "type": "select",
        "required": true,
        "options": [
          { "value": "movie", "label": "Movie" },
          { "value": "series", "label": "Series" },
          { "value": "episode", "label": "Episode" },
          { "value": "documentary", "label": "Documentary" }
        ]
      },
      {
        "key": "year",
        "label": "Year",
        "type": "number",
        "placeholder": "Enter release year"
      },
      {
        "key": "director",
        "label": "Director",
        "type": "text",
        "placeholder": "Enter director name"
      },
      {
        "key": "genre",
        "label": "Genre",
        "type": "multiselect",
        "options": [
          { "value": "action", "label": "Action" },
          { "value": "comedy", "label": "Comedy" },
          { "value": "drama", "label": "Drama" },
          { "value": "horror", "label": "Horror" },
          { "value": "romance", "label": "Romance" },
          { "value": "sci-fi", "label": "Sci-Fi" },
          { "value": "thriller", "label": "Thriller" }
        ]
      },
      {
        "key": "rating",
        "label": "Rating",
        "type": "number",
        "placeholder": "Enter rating (1-10)"
      },
      {
        "key": "duration",
        "label": "Duration (minutes)",
        "type": "number",
        "placeholder": "Enter duration"
      },
      {
        "key": "language",
        "label": "Language",
        "type": "select",
        "options": [
          { "value": "en", "label": "English" },
          { "value": "es", "label": "Spanish" },
          { "value": "fr", "label": "French" },
          { "value": "de", "label": "German" },
          { "value": "ja", "label": "Japanese" },
          { "value": "ko", "label": "Korean" },
          { "value": "zh", "label": "Chinese" },
          { "value": "hi", "label": "Hindi" }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "draft", "label": "Draft" },
          { "value": "processing", "label": "Processing" },
          { "value": "published", "label": "Published" },
          { "value": "archived", "label": "Archived" }
        ]
      },
      {
        "key": "organizationId",
        "label": "Organization",
        "type": "resource",
        "resourceType": "organizations",
        "displayField": "name",
        "valueField": "id",
        "subtitleField": "type",
        "searchable": true,
        "searchPlaceholder": "Search organizations..."
      },
      {
        "key": "parentTitleId",
        "label": "Parent Title",
        "type": "resource",
        "resourceType": "titles",
        "displayField": "name",
        "valueField": "id",
        "subtitleField": "type",
        "searchable": true,
        "searchPlaceholder": "Search titles..."
      },
      {
        "key": "description",
        "label": "Description",
        "type": "textarea",
        "placeholder": "Enter description"
      },
      {
        "key": "tags",
        "label": "Tags",
        "type": "multiselect",
        "options": []
      }
    ]
  }
}
