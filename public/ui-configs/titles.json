{
  "displayName": "Titles",
  "description": "Manage movies, series, episodes and documentaries",
  "icon": "film",
  "views": {
    "list": {
      "columns": [
        {
          "key": "name",
          "label": "Title",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "name",
          "subtitleField": "director"
        },
        {
          "key": "type",
          "label": "Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "year",
          "label": "Year",
          "type": "number",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center"
        },
        {
          "key": "director",
          "label": "Director",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "12%"
        },
        {
          "key": "genre",
          "label": "Genres",
          "type": "array",
          "filterable": true,
          "width": "12%",
          "formatter": "badge"
        },
        {
          "key": "rating",
          "label": "Rating",
          "type": "number",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "rating"
        },
        {
          "key": "totalViews",
          "label": "Views",
          "type": "number",
          "sortable": true,
          "width": "8%",
          "align": "center",
          "formatter": "number"
        },
        {
          "key": "revenue",
          "label": "Revenue",
          "type": "number",
          "sortable": true,
          "width": "10%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "createdAt",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "type",
          "type": "select",
          "label": "Type",
          "options": [
            {
              "value": "movie",
              "label": "Movie"
            },
            {
              "value": "series",
              "label": "Series"
            },
            {
              "value": "episode",
              "label": "Episode"
            },
            {
              "value": "documentary",
              "label": "Documentary"
            }
          ]
        },
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            {
              "value": "draft",
              "label": "Draft"
            },
            {
              "value": "processing",
              "label": "Processing"
            },
            {
              "value": "published",
              "label": "Published"
            },
            {
              "value": "archived",
              "label": "Archived"
            }
          ]
        },
        {
          "field": "language",
          "type": "select",
          "label": "Language",
          "options": [
            {
              "value": "en",
              "label": "English"
            },
            {
              "value": "es",
              "label": "Spanish"
            },
            {
              "value": "fr",
              "label": "French"
            },
            {
              "value": "de",
              "label": "German"
            },
            {
              "value": "ja",
              "label": "Japanese"
            },
            {
              "value": "ko",
              "label": "Korean"
            },
            {
              "value": "zh",
              "label": "Chinese"
            },
            {
              "value": "hi",
              "label": "Hindi"
            }
          ]
        }
      ],
      "searchableFields": ["name", "description", "director", "genre"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Title",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "titles:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "titles:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "titles:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "titles:delete"
        }
      ]
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "name",
      "colorField": "status",
      "descriptionField": "description"
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        {
          "value": "draft",
          "label": "Draft",
          "color": "#fbbf24"
        },
        {
          "value": "processing",
          "label": "Processing",
          "color": "#3b82f6"
        },
        {
          "value": "published",
          "label": "Published",
          "color": "#22c55e"
        },
        {
          "value": "archived",
          "label": "Archived",
          "color": "#64748b"
        }
      ],
      "cardTitleField": "name",
      "cardDescriptionField": "director"
    },
    "gallery": {
      "titleField": "name",
      "descriptionField": "director",
      "imageField": "poster"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          {
            "key": "name",
            "label": "Title",
            "type": "text"
          },
          {
            "key": "type",
            "label": "Type",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "description",
            "label": "Description",
            "type": "text"
          },
          {
            "key": "year",
            "label": "Year",
            "type": "number"
          },
          {
            "key": "director",
            "label": "Director",
            "type": "text"
          },
          {
            "key": "duration",
            "label": "Duration (seconds)",
            "type": "number"
          }
        ]
      },
      {
        "title": "Classification",
        "fields": [
          {
            "key": "genre",
            "label": "Genres",
            "type": "array",
            "formatter": "badge"
          },
          {
            "key": "language",
            "label": "Language",
            "type": "text"
          },
          {
            "key": "rating",
            "label": "Rating",
            "type": "number",
            "formatter": "rating"
          },
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          {
            "key": "tags",
            "label": "Tags",
            "type": "array",
            "formatter": "badge"
          }
        ]
      },
      {
        "title": "Financial",
        "fields": [
          {
            "key": "revenue",
            "label": "Revenue",
            "type": "number",
            "formatter": "currency"
          },
          {
            "key": "totalViews",
            "label": "Total Views",
            "type": "number",
            "formatter": "number"
          },
          {
            "key": "averageWatchTime",
            "label": "Avg Watch Time",
            "type": "number"
          },
          {
            "key": "completionRate",
            "label": "Completion Rate",
            "type": "number"
          },
          {
            "key": "budget",
            "label": "Budget",
            "type": "number",
            "formatter": "currency"
          },
          {
            "key": "boxOffice",
            "label": "Box Office",
            "type": "number",
            "formatter": "currency"
          }
        ]
      },
      {
        "title": "Media",
        "fields": [
          {
            "key": "poster",
            "label": "Poster",
            "type": "image"
          },
          {
            "key": "thumbnail",
            "label": "Thumbnail",
            "type": "image"
          }
        ]
      },
      {
        "title": "Relationships",
        "fields": [
          {
            "key": "organizationName",
            "label": "Organization",
            "type": "text"
          },
          {
            "key": "parentTitleId",
            "label": "Parent Title ID",
            "type": "text"
          }
        ]
      },
      {
        "title": "Metadata",
        "fields": [
          {
            "key": "createdAt",
            "label": "Created At",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "updatedAt",
            "label": "Updated At",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "name",
        "label": "Title",
        "type": "text",
        "required": true,
        "placeholder": "Enter title"
      },
      {
        "key": "type",
        "label": "Type",
        "type": "select",
        "required": true,
        "options": [
          {
            "value": "movie",
            "label": "Movie"
          },
          {
            "value": "series",
            "label": "Series"
          },
          {
            "value": "episode",
            "label": "Episode"
          },
          {
            "value": "documentary",
            "label": "Documentary"
          }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          {
            "value": "draft",
            "label": "Draft"
          },
          {
            "value": "processing",
            "label": "Processing"
          },
          {
            "value": "published",
            "label": "Published"
          },
          {
            "value": "archived",
            "label": "Archived"
          }
        ]
      },
      {
        "key": "description",
