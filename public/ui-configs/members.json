{
  "displayName": "Members",
  "description": "Manage subscription members and their billing information",
  "icon": "users",
  "views": {
    "list": {
      "columns": [
        {
          "key": "name",
          "label": "Member",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "name",
          "subtitleField": "email"
        },
        {
          "key": "email",
          "label": "Email",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%"
        },
        {
          "key": "subscriptionTier",
          "label": "Tier",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "12%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "billingCycle",
          "label": "Billing",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "lastPaymentAmount",
          "label": "Last Payment",
          "type": "number",
          "sortable": true,
          "width": "12%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "nextBillingDate",
          "label": "Next Billing",
          "type": "date",
          "sortable": true,
          "width": "12%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "joinDate",
          "label": "Joined",
          "type": "date",
          "sortable": true,
          "width": "12%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "joinDate",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "subscriptionTier",
          "type": "select",
          "label": "Subscription Tier",
          "options": [
            { "value": "basic", "label": "Basic" },
            { "value": "premium", "label": "Premium" },
            { "value": "pro", "label": "Pro" },
            { "value": "enterprise", "label": "Enterprise" }
          ]
        },
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "active", "label": "Active" },
            { "value": "cancelled", "label": "Cancelled" },
            { "value": "suspended", "label": "Suspended" },
            { "value": "past_due", "label": "Past Due" },
            { "value": "unpaid", "label": "Unpaid" },
            { "value": "trialing", "label": "Trialing" }
          ]
        }
      ],
      "searchableFields": ["name", "email"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Member",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "members:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "members:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "members:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "members:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "active", "label": "Active", "color": "#22c55e" },
        { "value": "trialing", "label": "Trialing", "color": "#3b82f6" },
        { "value": "past_due", "label": "Past Due", "color": "#f59e0b" },
        { "value": "cancelled", "label": "Cancelled", "color": "#64748b" },
        { "value": "suspended", "label": "Suspended", "color": "#ef4444" },
        { "value": "unpaid", "label": "Unpaid", "color": "#dc2626" }
      ],
      "cardTitleField": "name",
      "cardDescriptionField": "subscriptionTier"
    },
    "gallery": {
      "titleField": "name",
      "descriptionField": "email",
      "imageField": "avatar"
    },
    "calendar": {
      "dateField": "nextBillingDate",
      "titleField": "name",
      "colorField": "subscriptionTier",
      "descriptionField": "email"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          { "key": "name", "label": "Name", "type": "text" },
          { "key": "email", "label": "Email", "type": "text" },
          {
            "key": "subscriptionTier",
            "label": "Subscription Tier",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          }
        ]
      },
      {
        "title": "Billing Information",
        "fields": [
          {
            "key": "billingCycle",
            "label": "Billing Cycle",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "nextBillingDate",
            "label": "Next Billing Date",
            "type": "date",
            "formatter": "date"
          },
          { "key": "autoRenew", "label": "Auto Renew", "type": "boolean" },
          {
            "key": "lastPaymentDate",
            "label": "Last Payment Date",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "lastPaymentAmount",
            "label": "Last Payment Amount",
            "type": "number",
            "formatter": "currency"
          },
          { "key": "currency", "label": "Currency", "type": "text" }
        ]
      },
      {
        "title": "Payment Details",
        "fields": [
          {
            "key": "paymentMethod",
            "label": "Payment Method",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "stripeCustomerId",
            "label": "Stripe Customer ID",
            "type": "text"
          },
          {
            "key": "stripeSubscriptionId",
            "label": "Stripe Subscription ID",
            "type": "text"
          },
          {
            "key": "stripePaymentMethodId",
            "label": "Stripe Payment Method ID",
            "type": "text"
          }
        ]
      },
      {
        "title": "Activity & Preferences",
        "fields": [
          {
            "key": "joinDate",
            "label": "Join Date",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "lastActive",
            "label": "Last Active",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "totalWatchTime",
            "label": "Total Watch Time",
            "type": "number"
          },
          {
            "key": "monthlyRevenue",
            "label": "Monthly Revenue",
            "type": "number",
            "formatter": "currency"
          },
          { "key": "country", "label": "Country", "type": "text" }
        ]
      },
      {
        "title": "Favorite Genres",
        "fields": [
          {
            "key": "favoriteGenres",
            "label": "Favorite Genres",
            "type": "array",
            "formatter": "badge"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "name",
        "label": "Name",
        "type": "text",
        "required": true,
        "placeholder": "Enter member name"
      },
      {
        "key": "email",
        "label": "Email",
        "type": "email",
        "required": true,
        "placeholder": "Enter email address"
      },
      {
        "key": "subscriptionTier",
        "label": "Subscription Tier",
        "type": "select",
        "required": true,
        "options": [
          { "value": "basic", "label": "Basic" },
          { "value": "premium", "label": "Premium" },
          { "value": "pro", "label": "Pro" },
          { "value": "enterprise", "label": "Enterprise" }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "active", "label": "Active" },
          { "value": "cancelled", "label": "Cancelled" },
          { "value": "suspended", "label": "Suspended" },
          { "value": "past_due", "label": "Past Due" },
          { "value": "unpaid", "label": "Unpaid" },
          { "value": "trialing", "label": "Trialing" }
        ]
      },
      {
        "key": "billingCycle",
        "label": "Billing Cycle",
        "type": "select",
        "options": [
          { "value": "monthly", "label": "Monthly" },
          { "value": "annual", "label": "Annual" }
        ]
      },
      {
        "key": "nextBillingDate",
        "label": "Next Billing Date",
        "type": "date",
        "placeholder": "Select next billing date"
      },
      {
        "key": "autoRenew",
        "label": "Auto Renew",
        "type": "boolean"
      },
      {
        "key": "lastPaymentAmount",
        "label": "Last Payment Amount",
        "type": "number",
        "placeholder": "Enter last payment amount"
      },
      {
        "key": "currency",
        "label": "Currency",
        "type": "select",
        "options": [
          { "value": "USD", "label": "USD" },
          { "value": "EUR", "label": "EUR" },
          { "value": "JPY", "label": "JPY" },
          { "value": "KRW", "label": "KRW" },
          { "value": "CNY", "label": "CNY" },
          { "value": "INR", "label": "INR" }
        ]
      },
      {
        "key": "paymentMethod",
        "label": "Payment Method",
        "type": "select",
        "options": [
          { "value": "card", "label": "Card" },
          { "value": "bank_account", "label": "Bank Account" },
          { "value": "paypal", "label": "PayPal" }
        ]
      },
      {
        "key": "joinDate",
        "label": "Join Date",
        "type": "date",
        "required": true,
        "placeholder": "Select join date"
      },
      {
        "key": "lastActive",
        "label": "Last Active",
        "type": "date",
        "placeholder": "Select last active date"
      },
      {
        "key": "totalWatchTime",
        "label": "Total Watch Time",
        "type": "number",
        "placeholder": "Enter total watch time"
      },
      {
        "key": "monthlyRevenue",
        "label": "Monthly Revenue",
        "type": "number",
        "placeholder": "Enter monthly revenue"
      },
      {
        "key": "country",
        "label": "Country",
        "type": "select",
        "options": [],
        "placeholder": "Select country"
      },
      {
        "key": "favoriteGenres",
        "label": "Favorite Genres",
        "type": "multiselect",
        "options": [
          { "value": "action", "label": "Action" },
          { "value": "comedy", "label": "Comedy" },
          { "value": "drama", "label": "Drama" },
          { "value": "horror", "label": "Horror" },
          { "value": "romance", "label": "Romance" },
          { "value": "sci-fi", "label": "Sci-Fi" },
          { "value": "thriller", "label": "Thriller" }
        ]
      }
    ]
  }
}
