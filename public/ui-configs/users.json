          "type": "text",
          "required": true,
          "placeholder": "Enter email address"
        },
        {
          "key": "role",
          "label": "Role",
          "type": "select",
          "options": [
            {
              "value": "admin",
              "label": "Admin"
            },
            {
              "value": "manager",
              "label": "Manager"
            },
            {
              "value": "user",
              "label": "User"
            },
            {
              "value": "viewer",
              "label": "Viewer"
            }
          ]
        },
        {
          "key": "status",
          "label": "Status",
          "type": "select",
          "options": [
            {
              "value": "active",
              "label": "Active"
            },
            {
              "value": "inactive",
              "label": "Inactive"
            },
            {
              "value": "suspended",
              "label": "Suspended"
            }
          ]
        },
        {
          "key": "avatar",
          "label": "Avatar",
          "type": "file",
          "helpText": "Upload profile picture"
        },
        {
