{
  "displayName": "Users",
  "description": "Manage system users and their permissions",
  "icon": "users",
  "views": {
    "list": {
      "columns": [
        {
          "key": "name",
          "label": "User",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "name",
          "subtitleField": "email"
        },
        {
          "key": "email",
          "label": "Email",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%"
        },
        {
          "key": "role",
          "label": "Role",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "organizationId",
          "label": "Organization",
          "type": "ref",
          "refTo": "organizations",
          "sortable": true,
          "filterable": true,
          "width": "15%"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "lastLoginAt",
          "label": "Last Login",
          "type": "date",
          "sortable": true,
          "width": "12%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "13%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "createdAt",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "role",
          "type": "select",
          "label": "Role",
          "options": [
            { "value": "admin", "label": "Admin" },
            { "value": "manager", "label": "Manager" },
            { "value": "user", "label": "User" },
            { "value": "viewer", "label": "Viewer" }
          ]
        },
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "active", "label": "Active" },
            { "value": "inactive", "label": "Inactive" },
            { "value": "suspended", "label": "Suspended" }
          ]
        }
      ],
      "searchableFields": ["name", "email"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add User",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "users:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "users:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "users:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "users:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "active", "label": "Active", "color": "#22c55e" },
        { "value": "inactive", "label": "Inactive", "color": "#64748b" },
        { "value": "suspended", "label": "Suspended", "color": "#ef4444" }
      ],
      "cardTitleField": "name",
      "cardDescriptionField": "email"
    },
    "gallery": {
      "titleField": "name",
      "descriptionField": "email",
      "imageField": "avatar"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "name",
      "colorField": "role",
      "descriptionField": "email"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          { "key": "name", "label": "Name", "type": "text" },
          { "key": "email", "label": "Email", "type": "text" },
          {
            "key": "role",
            "label": "Role",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          }
        ]
      },
      {
        "title": "Organization",
        "fields": [
          {
            "key": "organizationId",
            "label": "Organization",
            "type": "ref",
            "refTo": "organizations"
          },
          {
            "key": "organizationName",
            "label": "Organization Name",
            "type": "text"
          }
        ]
      },
      {
        "title": "Contact Information",
        "fields": [
          { "key": "phone", "label": "Phone", "type": "text" },
          { "key": "timezone", "label": "Timezone", "type": "text" },
          { "key": "language", "label": "Language", "type": "text" }
        ]
      },
      {
        "title": "Account Status",
        "fields": [
          {
            "key": "isEmailVerified",
            "label": "Email Verified",
            "type": "boolean"
          },
          {
            "key": "lastLoginAt",
            "label": "Last Login",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "createdAt",
            "label": "Created",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "name",
        "label": "Name",
        "type": "text",
        "required": true,
        "placeholder": "Enter full name"
      },
      {
        "key": "email",
        "label": "Email",
        "type": "email",
        "required": true,
        "placeholder": "Enter email address"
      },
      {
        "key": "role",
        "label": "Role",
        "type": "select",
        "required": true,
        "options": [
          { "value": "admin", "label": "Admin" },
          { "value": "manager", "label": "Manager" },
          { "value": "user", "label": "User" },
          { "value": "viewer", "label": "Viewer" }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "active", "label": "Active" },
          { "value": "inactive", "label": "Inactive" },
          { "value": "suspended", "label": "Suspended" }
        ]
      },
      {
        "key": "organizationId",
        "label": "Organization",
        "type": "resource",
        "resourceType": "organizations",
        "displayField": "name",
        "valueField": "id",
        "subtitleField": "type",
        "searchable": true,
        "searchPlaceholder": "Search organizations..."
      },
      {
        "key": "phone",
        "label": "Phone",
        "type": "text",
        "placeholder": "Enter phone number"
      },
      {
        "key": "timezone",
        "label": "Timezone",
        "type": "text",
        "placeholder": "Enter timezone"
      },
      {
        "key": "language",
        "label": "Language",
        "type": "select",
        "options": [
          { "value": "en", "label": "English" },
          { "value": "es", "label": "Spanish" },
          { "value": "fr", "label": "French" },
          { "value": "de", "label": "German" },
          { "value": "ja", "label": "Japanese" },
          { "value": "ko", "label": "Korean" },
          { "value": "zh", "label": "Chinese" },
          { "value": "hi", "label": "Hindi" }
        ]
      },
      {
        "key": "isEmailVerified",
        "label": "Email Verified",
        "type": "boolean"
      }
    ]
  }
}
