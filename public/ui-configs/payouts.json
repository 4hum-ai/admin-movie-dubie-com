{
  "displayName": "Payouts",
  "description": "Manage publisher payouts and payment processing",
  "icon": "currency-dollar",
  "views": {
    "list": {
      "columns": [
        {
          "key": "organizationId",
          "label": "Organization",
          "type": "ref",
          "refTo": "organizations",
          "sortable": true,
          "filterable": true,
          "width": "20%"
        },
        {
          "key": "publisherName",
          "label": "Publisher",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "15%"
        },
        {
          "key": "amount",
          "label": "Amount",
          "type": "number",
          "sortable": true,
          "width": "12%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "netAmount",
          "label": "Net Amount",
          "type": "number",
          "sortable": true,
          "width": "12%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "paymentMethod",
          "label": "Method",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "payoutDate",
          "label": "Payout Date",
          "type": "date",
          "sortable": true,
          "width": "12%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "12%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "payoutDate",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "pending", "label": "Pending" },
            { "value": "processing", "label": "Processing" },
            { "value": "completed", "label": "Completed" },
            { "value": "failed", "label": "Failed" }
          ]
        },
        {
          "field": "paymentMethod",
          "type": "select",
          "label": "Payment Method",
          "options": [
            { "value": "bank_transfer", "label": "Bank Transfer" },
            { "value": "paypal", "label": "PayPal" },
            { "value": "stripe", "label": "Stripe" },
            { "value": "wire_transfer", "label": "Wire Transfer" }
          ]
        }
      ],
      "searchableFields": ["publisherName", "description", "transactionId"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Payout",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "payouts:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "payouts:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "payouts:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "payouts:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "pending", "label": "Pending", "color": "#fbbf24" },
        { "value": "processing", "label": "Processing", "color": "#3b82f6" },
        { "value": "completed", "label": "Completed", "color": "#22c55e" },
        { "value": "failed", "label": "Failed", "color": "#ef4444" }
      ],
      "cardTitleField": "publisherName",
      "cardDescriptionField": "amount"
    },
    "gallery": {
      "titleField": "publisherName",
      "descriptionField": "amount",
      "imageField": "organizationLogo"
    },
    "calendar": {
      "dateField": "payoutDate",
      "titleField": "publisherName",
      "colorField": "status",
      "descriptionField": "amount"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Payout Information",
        "fields": [
          {
            "key": "organizationId",
            "label": "Organization",
            "type": "ref",
            "refTo": "organizations"
          },
          { "key": "publisherName", "label": "Publisher Name", "type": "text" },
          {
            "key": "amount",
            "label": "Amount",
            "type": "number",
            "formatter": "currency"
          },
          { "key": "currency", "label": "Currency", "type": "text" }
        ]
      },
      {
        "title": "Payment Details",
        "fields": [
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          {
            "key": "payoutDate",
            "label": "Payout Date",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "paymentMethod",
            "label": "Payment Method",
            "type": "text",
            "formatter": "badge"
          },
          { "key": "transactionId", "label": "Transaction ID", "type": "text" }
        ]
      },
      {
        "title": "Banking Information",
        "fields": [
          { "key": "accountNumber", "label": "Account Number", "type": "text" },
          { "key": "bankName", "label": "Bank Name", "type": "text" },
          { "key": "routingNumber", "label": "Routing Number", "type": "text" },
          {
            "key": "accountType",
            "label": "Account Type",
            "type": "text",
            "formatter": "badge"
          }
        ]
      },
      {
        "title": "Financial Breakdown",
        "fields": [
          {
            "key": "processingFee",
            "label": "Processing Fee",
            "type": "number",
            "formatter": "currency"
          },
          {
            "key": "netAmount",
            "label": "Net Amount",
            "type": "number",
            "formatter": "currency"
          },
          { "key": "description", "label": "Description", "type": "text" }
        ]
      },
      {
        "title": "Additional Information",
        "fields": [
          { "key": "paypalEmail", "label": "PayPal Email", "type": "text" },
          { "key": "externalId", "label": "External ID", "type": "text" },
          {
            "key": "metadata",
            "label": "Additional Data",
            "type": "object"
          }
        ]
      },
      {
        "title": "Timestamps",
        "fields": [
          {
            "key": "createdAt",
            "label": "Created",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "organizationId",
        "label": "Organization",
        "type": "resource",
        "resourceType": "organizations",
        "displayField": "name",
        "valueField": "id",
        "subtitleField": "type",
        "searchable": true,
        "searchPlaceholder": "Search organizations...",
        "required": true
      },
      {
        "key": "publisherName",
        "label": "Publisher Name",
        "type": "text",
        "placeholder": "Enter publisher name"
      },
      {
        "key": "amount",
        "label": "Amount",
        "type": "number",
        "required": true,
        "placeholder": "Enter payout amount"
      },
      {
        "key": "currency",
        "label": "Currency",
        "type": "select",
        "options": [
          { "value": "USD", "label": "USD" },
          { "value": "EUR", "label": "EUR" },
          { "value": "JPY", "label": "JPY" },
          { "value": "KRW", "label": "KRW" },
          { "value": "CNY", "label": "CNY" },
          { "value": "INR", "label": "INR" }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "pending", "label": "Pending" },
          { "value": "processing", "label": "Processing" },
          { "value": "completed", "label": "Completed" },
          { "value": "failed", "label": "Failed" }
        ]
      },
      {
        "key": "payoutDate",
        "label": "Payout Date",
        "type": "date",
        "required": true,
        "placeholder": "Select payout date"
      },
      {
        "key": "paymentMethod",
        "label": "Payment Method",
        "type": "select",
        "options": [
          { "value": "bank_transfer", "label": "Bank Transfer" },
          { "value": "paypal", "label": "PayPal" },
          { "value": "stripe", "label": "Stripe" },
          { "value": "wire_transfer", "label": "Wire Transfer" }
        ]
      },
      {
        "key": "accountNumber",
        "label": "Account Number",
        "type": "text",
        "placeholder": "Enter account number"
      },
      {
        "key": "bankName",
        "label": "Bank Name",
        "type": "text",
        "placeholder": "Enter bank name"
      },
      {
        "key": "routingNumber",
        "label": "Routing Number",
        "type": "text",
        "placeholder": "Enter routing number"
      },
      {
        "key": "accountType",
        "label": "Account Type",
        "type": "select",
        "options": [
          { "value": "checking", "label": "Checking" },
          { "value": "savings", "label": "Savings" }
        ]
      },
      {
        "key": "transactionId",
        "label": "Transaction ID",
        "type": "text",
        "placeholder": "Enter transaction ID"
      },
      {
        "key": "processingFee",
        "label": "Processing Fee",
        "type": "number",
        "placeholder": "Enter processing fee"
      },
      {
        "key": "netAmount",
        "label": "Net Amount",
        "type": "number",
        "placeholder": "Enter net amount"
      },
      {
        "key": "description",
        "label": "Description",
        "type": "textarea",
        "placeholder": "Enter payout description"
      },
      {
        "key": "paypalEmail",
        "label": "PayPal Email",
        "type": "email",
        "placeholder": "Enter PayPal email"
      },
      {
        "key": "externalId",
        "label": "External ID",
        "type": "text",
        "placeholder": "Enter external ID"
      }
    ]
  }
}
