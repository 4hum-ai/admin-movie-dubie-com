{
  "displayName": "Organizations",
  "description": "Manage publishers, partners, vendors and other organizations",
  "icon": "building",
  "views": {
    "list": {
      "columns": [
        {
          "key": "name",
          "label": "Organization",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "searchable": true,
          "width": "20%",
          "titleField": "name",
          "subtitleField": "email"
        },
        {
          "key": "type",
          "label": "Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "country",
          "label": "Country",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "formatter": "country"
        },
        {
          "key": "companySize",
          "label": "Size",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "8%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "status",
          "label": "Status",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "10%",
          "align": "center",
          "formatter": "status"
        },
        {
          "key": "accountManagerId",
          "label": "Account Manager",
          "type": "ref",
          "refTo": "users",
          "sortable": true,
          "filterable": true,
          "width": "12%"
        },
        {
          "key": "totalRevenue",
          "label": "Revenue",
          "type": "number",
          "sortable": true,
          "width": "12%",
          "align": "right",
          "formatter": "currency"
        },
        {
          "key": "totalMovies",
          "label": "Movies",
          "type": "number",
          "sortable": true,
          "width": "8%",
          "align": "center"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "10%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "totalRevenue",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "type",
          "type": "select",
          "label": "Type",
          "options": [
            { "value": "publisher", "label": "Publisher" },
            { "value": "partner", "label": "Partner" },
            { "value": "vendor", "label": "Vendor" },
            { "value": "client", "label": "Client" },
            { "value": "affiliate", "label": "Affiliate" }
          ]
        },
        {
          "field": "status",
          "type": "select",
          "label": "Status",
          "options": [
            { "value": "active", "label": "Active" },
            { "value": "pending", "label": "Pending" },
            { "value": "suspended", "label": "Suspended" },
            { "value": "inactive", "label": "Inactive" }
          ]
        }
      ],
      "searchableFields": ["name", "email", "address"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Organization",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "organizations:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "organizations:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "organizations:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "organizations:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "status",
      "columns": [
        { "value": "active", "label": "Active", "color": "#22c55e" },
        { "value": "pending", "label": "Pending", "color": "#fbbf24" },
        { "value": "suspended", "label": "Suspended", "color": "#ef4444" },
        { "value": "inactive", "label": "Inactive", "color": "#64748b" }
      ],
      "cardTitleField": "name",
      "cardDescriptionField": "type"
    },
    "gallery": {
      "titleField": "name",
      "descriptionField": "type",
      "imageField": "logo"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "name",
      "colorField": "type",
      "descriptionField": "country"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Basic Information",
        "fields": [
          { "key": "name", "label": "Organization Name", "type": "text" },
          {
            "key": "type",
            "label": "Type",
            "type": "text",
            "formatter": "badge"
          },
          {
            "key": "status",
            "label": "Status",
            "type": "text",
            "formatter": "status"
          },
          { "key": "email", "label": "Email", "type": "text" }
        ]
      },
      {
        "title": "Location",
        "fields": [
          {
            "key": "country",
            "label": "Country",
            "type": "text",
            "formatter": "country"
          },
          { "key": "address", "label": "Address", "type": "text" }
        ]
      },
      {
        "title": "Business Details",
        "fields": [
          {
            "key": "companySize",
            "label": "Company Size",
            "type": "text",
            "formatter": "badge"
          },
          { "key": "industry", "label": "Industry", "type": "text" },
          {
            "key": "annualRevenue",
            "label": "Annual Revenue",
            "type": "number",
            "formatter": "currency"
          }
        ]
      },
      {
        "title": "Account Management",
        "fields": [
          {
            "key": "accountManagerId",
            "label": "Account Manager",
            "type": "ref",
            "refTo": "users"
          },
          {
            "key": "onboardingStatus",
            "label": "Onboarding Status",
            "type": "text",
            "formatter": "status"
          }
        ]
      },
      {
        "title": "Performance",
        "fields": [
          {
            "key": "totalRevenue",
            "label": "Total Revenue",
            "type": "number",
            "formatter": "currency"
          },
          { "key": "totalMovies", "label": "Total Movies", "type": "number" },
          {
            "key": "averageRating",
            "label": "Average Rating",
            "type": "number",
            "formatter": "rating"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "name",
        "label": "Organization Name",
        "type": "text",
        "required": true,
        "placeholder": "Enter organization name"
      },
      {
        "key": "type",
        "label": "Type",
        "type": "select",
        "required": true,
        "options": [
          { "value": "publisher", "label": "Publisher" },
          { "value": "partner", "label": "Partner" },
          { "value": "vendor", "label": "Vendor" },
          { "value": "client", "label": "Client" },
          { "value": "affiliate", "label": "Affiliate" }
        ]
      },
      {
        "key": "status",
        "label": "Status",
        "type": "select",
        "options": [
          { "value": "active", "label": "Active" },
          { "value": "pending", "label": "Pending" },
          { "value": "suspended", "label": "Suspended" },
          { "value": "inactive", "label": "Inactive" }
        ]
      },
      {
        "key": "email",
        "label": "Email",
        "type": "text",
        "required": true,
        "placeholder": "Enter email address"
      },
      {
        "key": "website",
        "label": "Website",
        "type": "url",
        "placeholder": "Enter website URL"
      },
      {
        "key": "phone",
        "label": "Phone",
        "type": "text",
        "placeholder": "Enter phone number"
      },
      {
        "key": "country",
        "label": "Country",
        "type": "select",
        "options": [],
        "placeholder": "Select country"
      },
      {
        "key": "address",
        "label": "Address",
        "type": "textarea",
        "placeholder": "Enter address"
      },
      {
        "key": "companySize",
        "label": "Company Size",
        "type": "select",
        "options": [
          { "value": "startup", "label": "Startup" },
          { "value": "small", "label": "Small" },
          { "value": "medium", "label": "Medium" },
          { "value": "large", "label": "Large" },
          { "value": "enterprise", "label": "Enterprise" }
        ]
      },
      {
        "key": "industry",
        "label": "Industry",
        "type": "text",
        "placeholder": "Enter industry"
      },
      {
        "key": "annualRevenue",
        "label": "Annual Revenue",
        "type": "number",
        "placeholder": "Enter annual revenue"
      },
      {
        "key": "accountManagerId",
        "label": "Account Manager",
        "type": "resource",
        "resourceType": "users",
        "displayField": "name",
        "valueField": "id",
        "subtitleField": "email",
        "searchable": true,
        "searchPlaceholder": "Search users..."
      }
    ]
  }
}
