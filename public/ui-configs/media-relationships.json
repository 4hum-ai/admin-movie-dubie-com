{
  "displayName": "Media Relationships",
  "description": "Manage relationships between media files and other entities",
  "icon": "link",
  "views": {
    "list": {
      "columns": [
        {
          "key": "mediaId",
          "label": "Media",
          "type": "ref",
          "refTo": "media",
          "sortable": true,
          "filterable": true,
          "width": "20%"
        },
        {
          "key": "entityType",
          "label": "Entity Type",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "entityId",
          "label": "Entity ID",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%"
        },
        {
          "key": "relationshipType",
          "label": "Relationship",
          "type": "text",
          "sortable": true,
          "filterable": true,
          "width": "15%",
          "align": "center",
          "formatter": "badge"
        },
        {
          "key": "createdAt",
          "label": "Created",
          "type": "date",
          "sortable": true,
          "width": "15%",
          "align": "center",
          "formatter": "date"
        },
        {
          "key": "updatedAt",
          "label": "Updated",
          "type": "date",
          "sortable": true,
          "width": "15%",
          "align": "center",
          "formatter": "date"
        }
      ],
      "defaultSort": {
        "field": "createdAt",
        "direction": "desc"
      },
      "defaultFilters": [
        {
          "field": "entityType",
          "type": "select",
          "label": "Entity Type",
          "options": [
            { "value": "titles", "label": "Titles" },
            { "value": "organizations", "label": "Organizations" },
            { "value": "users", "label": "Users" },
            { "value": "contacts", "label": "Contacts" }
          ]
        },
        {
          "field": "relationshipType",
          "type": "select",
          "label": "Relationship Type",
          "options": [
            { "value": "belongs_to", "label": "Belongs To" },
            { "value": "created_by", "label": "Created By" },
            { "value": "owned_by", "label": "Owned By" },
            { "value": "related_to", "label": "Related To" }
          ]
        }
      ],
      "searchableFields": ["entityType", "relationshipType"],
      "pageSize": 20,
      "actions": [
        {
          "name": "create",
          "label": "Add Relationship",
          "type": "button",
          "icon": "plus",
          "variant": "primary",
          "permission": "media-relationships:create"
        },
        {
          "name": "view",
          "label": "View",
          "type": "button",
          "icon": "eye",
          "variant": "secondary",
          "permission": "media-relationships:read"
        },
        {
          "name": "edit",
          "label": "Edit",
          "type": "button",
          "icon": "edit",
          "variant": "secondary",
          "permission": "media-relationships:update"
        },
        {
          "name": "delete",
          "label": "Delete",
          "type": "button",
          "icon": "trash",
          "variant": "danger",
          "permission": "media-relationships:delete"
        }
      ]
    },
    "kanban": {
      "groupByField": "entityType",
      "columns": [
        { "value": "titles", "label": "Titles", "color": "#3b82f6" },
        {
          "value": "organizations",
          "label": "Organizations",
          "color": "#10b981"
        },
        { "value": "users", "label": "Users", "color": "#f59e0b" },
        { "value": "contacts", "label": "Contacts", "color": "#ef4444" }
      ],
      "cardTitleField": "relationshipType",
      "cardDescriptionField": "entityId"
    },
    "gallery": {
      "titleField": "relationshipType",
      "descriptionField": "entityType",
      "imageField": "mediaThumbnail"
    },
    "calendar": {
      "dateField": "createdAt",
      "titleField": "relationshipType",
      "colorField": "entityType",
      "descriptionField": "entityId"
    }
  },
  "detailView": {
    "sections": [
      {
        "title": "Relationship Information",
        "fields": [
          {
            "key": "mediaId",
            "label": "Media",
            "type": "ref",
            "refTo": "media"
          },
          {
            "key": "entityType",
            "label": "Entity Type",
            "type": "text",
            "formatter": "badge"
          },
          { "key": "entityId", "label": "Entity ID", "type": "text" },
          {
            "key": "relationshipType",
            "label": "Relationship Type",
            "type": "text",
            "formatter": "badge"
          }
        ]
      },
      {
        "title": "Metadata",
        "fields": [
          {
            "key": "metadata",
            "label": "Additional Data",
            "type": "object"
          }
        ]
      },
      {
        "title": "Timestamps",
        "fields": [
          {
            "key": "createdAt",
            "label": "Created",
            "type": "date",
            "formatter": "date"
          },
          {
            "key": "updatedAt",
            "label": "Updated",
            "type": "date",
            "formatter": "date"
          }
        ]
      }
    ]
  },
  "formView": {
    "fields": [
      {
        "key": "mediaId",
        "label": "Media",
        "type": "resource",
        "resourceType": "media",
        "displayField": "fileName",
        "valueField": "id",
        "subtitleField": "type",
        "searchable": true,
        "searchPlaceholder": "Search media files...",
        "required": true
      },
      {
        "key": "entityType",
        "label": "Entity Type",
        "type": "select",
        "required": true,
        "options": [
          { "value": "titles", "label": "Titles" },
          { "value": "organizations", "label": "Organizations" },
          { "value": "users", "label": "Users" },
          { "value": "contacts", "label": "Contacts" }
        ]
      },
      {
        "key": "entityId",
        "label": "Entity ID",
        "type": "text",
        "required": true,
        "placeholder": "Enter entity ID"
      },
      {
        "key": "relationshipType",
        "label": "Relationship Type",
        "type": "select",
        "required": true,
        "options": [
          { "value": "belongs_to", "label": "Belongs To" },
          { "value": "created_by", "label": "Created By" },
          { "value": "owned_by", "label": "Owned By" },
          { "value": "related_to", "label": "Related To" }
        ]
      }
    ]
  }
}
